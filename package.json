{
  "name": "hiero-block-bridge",
  "version": "0.1.0",
  "description": "A modular TypeScript library for simulating and automating Hedera Block Node access",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "prepare": "husky"
  },
  "keywords": [
    "hedera",
    "hiero",
    "block-node",
    "block-stream",
    "simulator",
    "typescript",
    "web3",
    "dlt",
    "hashgraph",
    "hip-1056",
    "hip-1081"
  ],
  "author": "devFred",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/U-GOD/hiero-block-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/U-GOD/hiero-block-bridge/issues"
  },
  "homepage": "https://github.com/U-GOD/hiero-block-bridge#readme",
  "dependencies": {
    "@hashgraph/sdk": "^2.80.0",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
